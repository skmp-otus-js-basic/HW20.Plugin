{
  "name": "otus.js-basic.hw19.blog",
  "version": "1.0.0",
  "description": "Use a preprocessor to create blog application pages",
  "scripts": {
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "prepare": "husky install",
    "build": "webpack --node-env production",
    "dev": "webpack serve --node-env development --open",
    "stylelint": "npx stylelint \"**/*.scss\"",
    "stylelint-check": "stylelint-config-prettier-scss-check"
  },
  "author": "Sergey Potysev",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "html-loader": "^3.1.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "mini-css-extract-plugin": "^2.6.1",
    "prettier": "2.6.2",
    "style-loader": "^3.3.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,html,md}": "prettier --write",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "sass": "^1.53.0",
    "sass-loader": "^13.0.0"
  }
}
